@model IEnumerable<FitnessPro.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    <div class="col-12 text-end mb-2">
        <a class="btn btn-primary rounded-pill" asp-action="Create">Create New</a>
    </div>
</div>
<div class="row g-2 ">
    <div class="col-12 col-md-8 ">
        <div class="row row-cols-1 g-3">
            @foreach (var client in Model)
            {
                <div class="col">
                    <div class="card mb-3 rounded-pill">
                        <div class="row g-0">
                            <div class="col-md-4 square-img-container">
                                <img src="/img/FitnessPro.png" class="square-img rounded-start" alt="...">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <span class="fw-bold heroTitle2 me-2">@Html.DisplayFor(modelItem => client.FullName) </span>
                                    <div class="card-text">
                                        <span class="fw-bold me-2">Age:</span>@Html.DisplayFor(modelItem => client.Age)
                                    </div>
                                    <div class="card-text">
                                        <span class="fw-bold me-2">Fitness Goal:</span>@Html.DisplayFor(modelItem => client.FitnessGoal)
                                    </div>

                                    <div class="fs-2 mt-5 ">
                                        <a class="me-3 editIcons" asp-action="Edit" asp-route-id="@client.Id"><i class="bi bi-pencil-fill "></i></a>
                                        <a class="me-3 editIcons" href="#"><i class="bi bi-envelope-fill "></i></a>
                                        <a class="me-3 editIcons" asp-action="Delete" asp-route-id="@client.Id"><i class="bi bi-trash-fill text-danger "></i></a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>
